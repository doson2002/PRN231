<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Đổ bóng -->
    <item>
        <shape>
            <solid android:color="#22000000"/> <!-- Màu đổ bóng (có thể điều chỉnh độ mờ và màu) -->
            <corners android:radius="20dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Hình dạng chính -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp"> <!-- Điều chỉnh khoảng cách để tạo đổ bóng -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="20dp" />
            <solid android:color="@color/white" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</layer-list>
